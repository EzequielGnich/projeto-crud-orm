<% include ../partials/header %>

  <h1>Editar Pessoa</h1>
  <p><a href="/pessoas">Voltar a lista de pessoas</a></p>

  <form method="post">
    <div class="form-group">
      <label for="nome">Nome</label>
      <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite seu nome aqui" value="<%= pessoa.nome %>">
    </div>
    <div class="form-group">
      <label for="nascimento">Data de nascimento</label>
      <input type="text" class="form-control" id="nascimento" name="nascimento" placeholder="Selecione ou digite sua data de nascimento" value="<%= pessoa.nascimento %>">
    </div>
    <div class="form-group">
      <label for="cargo">Cargo</label>
      <input type="text" class="form-control" id="cargo" name="cargo" placeholder="Digite seu cargo" value="<%= pessoa.cargo %>">
    </div>
    <button type="submit" class="btn btn-success btn-lg">Salvar</button>
  </form>



<% include ../partials/footer %>